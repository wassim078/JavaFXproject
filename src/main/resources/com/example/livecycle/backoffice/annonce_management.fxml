<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.livecycle.controllers.backoffice.AnnonceManagementController"
            prefHeight="600" prefWidth="1200"
            style="-fx-padding: 20;">

    <TableView fx:id="annoncesTable" layoutX="10" layoutY="10" prefHeight="550" prefWidth="1160">
        <columns>
            <!-- ID Column -->
            <TableColumn text="ID" prefWidth="50" fx:id="idColumn"/>

            <!-- Title Column -->
            <TableColumn text="Title" prefWidth="150" fx:id="titleColumn"/>

            <!-- Description Column -->
            <TableColumn text="Description" prefWidth="250" fx:id="descriptionColumn"/>

            <!-- Category Column -->
            <TableColumn text="Category" prefWidth="120" fx:id="categoryColumn"/>

            <!-- Weight Column -->
            <TableColumn text="Weight (kg)" prefWidth="80" fx:id="weightColumn"/>

            <!-- Price Column -->
            <TableColumn text="Price (TND)" prefWidth="80" fx:id="priceColumn"/>

            <!-- Quantity Column -->
            <TableColumn text="Quantity" prefWidth="80" fx:id="quantityColumn"/>

            <!-- User Email Column -->
            <TableColumn text="User Email" prefWidth="200" fx:id="userEmailColumn"/>

            <!-- Image Column -->
            <TableColumn text="Image" prefWidth="200" fx:id="imageColumn"/>

            <!-- Actions Column -->
            <TableColumn text="Actions" prefWidth="150" fx:id="actionsColumn"/>
        </columns>
    </TableView>

</AnchorPane>